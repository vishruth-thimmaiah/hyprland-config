#!/bin/bash

## Get data
STATUS="$(playerctl --player spotify,firefox status 2>&1)"

## Get status
get_status() {
	if [[ $STATUS == *"Playing"* ]]; then
		echo ""
	else
		echo ""
	fi
}

## Get song
get_song() {
	song=$(playerctl --player spotify,vlc,firefox metadata --format '{{title}}')
	if [[ -z "$song" ]]; then
		echo "Offline"
	else
		length=${#song}
		if [[ $length -lt 19 ]]; then
			echo "$song"
		else
			echo "${song:0:19} ..."
		fi
	fi	
}

## Get artist
get_artist() {
	artist=$(playerctl --player spotify,vlc,firefox metadata --format '{{artist}}')
	if [[ -z "$artist" ]]; then
		echo ""
	else
		echo "$artist"
	fi	
}

## Get time
get_ttime() {
	ttimem=$(playerctl --player spotify,vlc,firefox metadata --format '{{mpris:length}}')
	ttime=$((ttimem/1000000))
	if [[ -z "$ttime" ]]; then
		echo "0"
	else
		echo "$ttime"
	fi	
}

get_time() {
	time=$(playerctl --player spotify,vlc,firefox position)
	if [[ -z "$time" ]]; then
		echo "0:00"
	else
		echo "$time"
	fi
}

## Get cover
get_cover() {
	if [[ "$STATUS" == *"Playing"* ]];then
		cover="$(playerctl --player spotify,vlc,firefox metadata --format '{{mpris:artUrl}}')"
		filePath="/tmp/media-img/$(echo "$cover" | rev | cut -d "/" -f 1 | rev)"
		if [[ ! -f "$filePath" ]]; then
			[[ ! -d /tmp/media-img/  ]] && mkdir /tmp/media-img
			curl -4 "$cover" --output "$filePath"
			composite -compose copy_opacity ~/.config/eww/menu/images/gradient.png "$filePath" /tmp/media-img/out.png
			convert /tmp/media-img/out.png -set option:distort:viewport "%[fx:w+640]x%[h]+0+0" -distort SRT 0 +repage "$filePath"
		fi
		echo "$filePath"
	else
		echo "menu/images/music.png"
	fi
}

## Execute accordingly
if [[ "$1" == "--song" ]]; then
	get_song
elif [[ "$1" == "--artist" ]]; then
	get_artist
elif [[ "$1" == "--status" ]]; then
	get_status
elif [[ "$1" == "--time" ]]; then
	get_time
elif [[ "$1" == "--ttime" ]]; then
	get_ttime
elif [[ "$1" == "--cover" ]]; then
	get_cover
elif [[ "$1" == "--toggle" ]]; then
	playerctl --player spotify,vlc,firefox play-pause
elif [[ "$1" == "--next" ]]; then
	{ playerctl --player spotify,vlc,firefox next; get_cover; }
elif [[ "$1" == "--prev" ]]; then
	{ playerctl --player spotify,vlc,firefox previous; get_cover; }
fi
